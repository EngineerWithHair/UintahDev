
#include <config/sci.cf>

LOCALINCLUDES = -I.. -I../../project

OBJS = ScalarFieldReader.o  SurfaceReader.o
SRCS = ScalarFieldReader.cc SurfaceReader.cc

.cc.o:
	$(CCC) $(CCFLAGS) -c $<

../modules.o: $(OBJS)
	cd .. && make modules.o

AllTarget(../modules.o)

SCIDependTarget($(SRCS))

ScalarFieldReader.h: Reader.h
	sed 's/TYPE/ScalarField/g' < Reader.h > ScalarFieldReader.h

ScalarFieldReader.cc: Reader.cc ScalarFieldReader.h
	sed 's/TYPE/ScalarField/g' < Reader.cc > ScalarFieldReader.cc

SurfaceReader.h: Reader.h
	sed 's/TYPE/Surface/g' < Reader.h > SurfaceReader.h

SurfaceReader.cc: Reader.cc SurfaceReader.h
	sed 's/TYPE/Surface/g' < Reader.cc > SurfaceReader.cc
