
#define IHaveSubdirs
#include <config/sci.cf>

SUBDIRS = CrossFader FieldReader IsoSurface Salmon \
	SoundInput SoundFilter SoundMixer SoundOutput SoundReader \
	VoiceRemover

SCISubdirs($(SUBDIRS))

all:: modules.o

MODULES = CrossFader/CrossFader.o \
	FieldReader/FieldReader.o \
	IsoSurface/IsoSurface.o \
	Salmon/Salmon.o \
	Salmon/Roe.o \
	SoundInput/SoundInput.o \
	SoundFilter/SoundFilter.o \
	SoundMixer/SoundMixer.o \
	SoundOutput/SoundOutput.o \
	SoundReader/SoundReader.o \
	VoiceRemover/VoiceRemover.o

$(MODULES):
	@echo "Making in "`dirname $<`
	@cd `dirname $<` && make

modules.o: $(MODULES)
	ld -r -o modules.o $(MODULES)


