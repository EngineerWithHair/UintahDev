
#define IHaveSubdirs
#include <config/sci.cf>

SUBDIRS = CrossFader Hedgehog \
	IsoSurface LaceContours MeshView Readers Salmon \
	SoundInput SoundFilter SoundMixer SoundOutput SoundReader \
	Streamline SurfToGeom TransformCS VoiceRemover

SCISubdirs($(SUBDIRS))

all:: modules.o

MODULES = \
	CrossFader/CrossFader.o \
	Hedgehog/Hedgehog.o \
	IsoSurface/IsoSurface.o \
	LaceContours/LaceContours.o \
	MeshView/MeshView.o \
	Readers/ScalarFieldReader.o \
	Readers/ContourSetReader.o \
	Readers/SurfaceReader.o \
	Readers/VectorFieldReader.o \
	Salmon/Salmon.o \
	Salmon/Roe.o \
	SoundInput/SoundInput.o \
	SoundFilter/SoundFilter.o \
	SoundMixer/SoundMixer.o \
	SoundOutput/SoundOutput.o \
	SoundReader/SoundReader.o \
	TransformCS/TransformCS.o \
	Streamline/Streamline.o \
	SurfToGeom/SurfToGeom.o \
	VoiceRemover/VoiceRemover.o

$(MODULES):
	@echo "Making in "`dirname $<`
	@cd `dirname $<` && make

modules.o: $(MODULES)
	ld -r -o modules.o $(MODULES)


