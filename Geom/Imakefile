
#include <config/sci.cf>

#ifdef SCI_DIR_Geom

#ifdef SCI_OPENGL
OPENGLOBJS = GeomOpenGL.o
OPENGLSRCS = GeomOpenGL.cc
#else
OPENGLOBJS =
OPENGLSRCS =
#endif

X11OBJS = GeomX11.o
X11SRCS = GeomX11.cc

OBJS = Arrows.o  Color.o  Cone.o  Container.o  Cylinder.o  Disc.o  \
	Geom.o  GeomRaytracer.o  Grid.o  Group.o  \
	HeadLight.o  Light.o  Lighting.o  Line.o  Material.o  \
	Pick.o  PointLight.o  Polyline.o  Pt.o  \
	RenderMode.o  Sphere.o Switch.o  \
	Tetra.o  Torus.o  Tri.o  Triangles.o  TriStrip.o  Tube.o  \
	VertexPrim.o  View.o  \
	TCLGeom.o  $(OPENGLOBJS) $(X11OBJS)
SRCS = Arrows.cc Color.cc Cone.cc Container.cc Cylinder.cc Disc.cc \
	Geom.cc GeomRaytracer.cc Grid.cc Group.cc \
	HeadLight.cc Light.cc Lighting.cc Line.cc Material.cc \
	Pick.cc PointLight.cc Polyline.cc Pt.cc \
	RenderMode.cc Sphere.cc Switch.cc \
	Tetra.cc Torus.cc Tri.cc Triangles.cc TriStrip.cc Tube.cc \
	VertexPrim.cc View.cc \
	TCLGeom.cc $(OPENGLSRCS) $(X11SRCS)
SO_LIBS = ../Geometry/libGeometry.a \
	../Multitask/libMultitask.a ../Malloc/libMalloc.a \
	../Math/libMath.a ../TCL/libTCL.a ../Classlib/libClasslib.a \
	../Dataflow/libDataflow.a ../Classlib/libClasslib.a \
	../tcl/sci/libscitk.a ../tcl/itcl/src/libitcl.a \
	../tcl/tcl/libtcl.a ../tcl/tk/libtk.a 
SO_LDFLAGS = -lGLU -lGL -lX11 -lC -lm -;c

LIBNAME = Geom

SCIDependTarget($(SRCS))
SCIObjLibraryTarget($(LIBNAME),$(OBJS), $(SO_LIBS), $(SO_LDFLAGS))

#else
all:
depend::

           RM_CMD = $(RM) *.CKP *.ln *.BAK *.bak core errs ,* *~ .emacs_* tags TAGS make.log MakeOut

#endif
