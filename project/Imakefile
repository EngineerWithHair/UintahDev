
#include <config/sci.cf>

LOCALINCLUDES = -I. -I../modules -I../../wrapper -I../../wrapper/Mt -I../../wrapper/libMInT
OBJS = CallbackCloners.o \
	ColorManager.o  Connection.o  \
	Field3D.o  Field3DPort.o  GeometryPort.o  \
	HelpUI.o  MemStats.o  MenuBar.o  \
	Module.o  Modules.o  ModuleList.o  MotifCallbackBase.o  \
	MUI.o  \
	MtXEventLoop.o \
	Network.o  NetworkEditor.o  Persistent.o  Port.o  \
	SoundPort.o \
	UserModule.o  XQColor.o \
	main.o
SRCS = CallbackCloners.cc \
	ColorManager.cc Connection.cc \
	Field3D.cc Field3DPort.cc GeometryPort.cc \
	HelpUI.cc MemStats.cc MenuBar.cc \
	Module.cc Modules.cc ModuleList.cc MotifCallbackBase.cc \
	MUI.cc \
	MtXEventLoop.cc \
	Network.cc NetworkEditor.cc Persistent.cc Port.cc \
	SoundPort.cc \
	UserModule.cc XQColor.cc \
	main.cc
TARGET = project

SCI_LIBS = \
	../modules/libmodules.a \
	SCI_MultitaskLib \
	SCI_ClassLib \
	../../wrapper/libMInT/libMInT.a \
	../../templates/fast_templates.a \
	SCI_MallocLib

../../templates/fast_templates.a: $(OBJS)
	make_templates ../../templates

SCI_LDFLAGS = -laudio SCI_LM SCI_LTHREAD SCI_LMOTIF \
	SCI_LX11 -lgen -lGLw -lGL -ptv

depend:: XQColorDB.h

SCIDependTarget($(SRCS))
SCIProgramTarget($(TARGET), $(OBJS), $(SCI_LIBS), $(SCI_LDFLAGS))

XQColorDB.h: rgb.txt gendb.awk
	rm -f XQColorDB.h
	awk -f gendb.awk rgb.txt > XQColorDB.h
