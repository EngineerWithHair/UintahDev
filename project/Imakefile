
#include <config/sci.cf>

LOCALINCLUDES = -I. -I../modules -I../../wrapper -I../../wrapper/Mt -I../../wrapper/libMInT
OBJS = CallbackCloners.o \
	Color.o ColorManager.o  Connection.o  \
	Field3D.o  Field3DPort.o  Geom.o  GeometryPort.o  \
	HelpUI.o  MemStats.o  MessageBase.o  MenuBar.o  ModuleHelper.o  \
	Module.o  ModuleList.o  MotifCallbackBase.o  \
	MUI.o  \
	MtXEventLoop.o \
	Network.o  NetworkEditor.o  Persistent.o  PopupMenu.o  Port.o  \
	SoundPort.o \
	UserModule.o  XQColor.o \
	main.o
SRCS = CallbackCloners.cc \
	Color.cc ColorManager.cc Connection.cc \
	Field3D.cc Field3DPort.cc Geom.cc GeometryPort.cc \
	HelpUI.cc MemStats.cc MessageBase.cc MenuBar.cc ModuleHelper.cc \
	Module.cc ModuleList.cc MotifCallbackBase.cc \
	MUI.cc \
	MtXEventLoop.cc \
	Network.cc NetworkEditor.cc Persistent.cc PopupMenu.cc Port.cc \
	SoundPort.cc \
	UserModule.cc XQColor.cc \
	main.cc
TARGET = project

SCI_LIBS = \
	../modules/modules.o \
	SCI_MultitaskLib \
	SCI_ClassLib \
	SCI_GeometryLib \
	SCI_MathLib \
	../../templates/fast_templates.o \
	../../wrapper/libMInT/libMInT.a \
	SCI_MallocLib

../../templates/fast_templates.o: $(OBJS) ../modules/modules.o
	make_templates ../../templates

SCI_LDFLAGS = -laudio -laudiofile SCI_LM SCI_LTHREAD SCI_LMOTIF \
	SCI_LX11 -lgen -lGLw -lGLU -lGL -ptv

depend:: XQColorDB.h

SCIDependTarget($(SRCS))
SCIProgramTarget($(TARGET), $(OBJS), $(SCI_LIBS), $(SCI_LDFLAGS))

XQColorDB.h: rgb.txt gendb.awk
	rm -f XQColorDB.h
	awk -f gendb.awk rgb.txt > XQColorDB.h
