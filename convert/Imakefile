
convert: convertall

all:

#define all convertall
#include <config/sci.cf>

CONVERT_LIBS = \
	$(TOP)/Widgets/libWidgets.a \
	$(TOP)/Constraints/libConstraints.a \
	$(TOP)/TCL/libTCL.a \
	$(TOP)/Datatypes/libDatatypes.a \
	$(TOP)/Dataflow/libDataflow.a \
	$(TOP)/TCL/libTCL.a \
	$(TOP)/Geom/libGeom.a \
	$(TOP)/Comm/libComm.a \
	$(TOP)/Geometry/libGeometry.a \
	$(TOP)/Math/libMath.a \
	$(TOP)/Multitask/libMultitask.a \
	$(TOP)/Malloc/libMalloc.a \
	$(TOP)/Dataflow/libDataflow.a \
	$(TOP)/Classlib/libClasslib.a \
	$(TOP)/tcl/sci/libscitk.a \
	$(TOP)/tcl/itcl/src/libitcl.a \
	$(TOP)/tcl/tk/libtk.a \
	$(TOP)/tcl/tcl/libtcl.a

CONVERT_LDFLAGS = SCI_LM SCI_LGL SCI_LX11

#define ConvertTarget(name) SCIProgramTarget2(name, name/**/.o, $(CONVERT_LIBS), $(CONVERT_LDFLAGS))



ConvertTarget(SegToCS)
ConvertTarget(SurfToJAS)
ConvertTarget(JAStoSurf)
ConvertTarget(ScFldToIves)
ConvertTarget(VPtoTriSurf)
ConvertTarget(GenScalp)
ConvertTarget(ConvMesh)
ConvertTarget(JAStoUG)
ConvertTarget(GEtoSF)
