
convert: convertall

all:

#define all convertall
#include <config/sci.cf>

SO_LDFLAGS = -L$(TOP)/lib -lDatatypes -lMath \
	-lClasslib -lMultitask -lMalloc -lm

#define ConvertProgram(name) @@\
SCIProgramTarget(name, name.o, , $(SO_LDFLAGS)) @@\
					        @@\
SCIDependTarget(name.cc)


ConvertProgram(ConvMesh)
ConvertProgram(GenMesh)
ConvertProgram(GenScalp)
ConvertProgram(JAStoSurf)
ConvertProgram(JAStoUG)
ConvertProgram(ScFldToIves)
ConvertProgram(SegToCS)
ConvertProgram(SurfToJAS)
ConvertProgram(VPtoTriSurf)
