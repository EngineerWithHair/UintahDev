
#include <config/sci.cf>

OBJS = MeshIterator.o
GENSRCS = MeshIterator.cc
SRCS = $(GENSRCS)
LIBNAME = Iterators

SO_LIBS =
SO_LDFLAGS = -L$(TOP)/lib -lDatatypes -lDataflow -lTCL \
	-lClasslib -lMultitask -lMalloc

depend:: $(GENSRCS)

clean::
	$(RM) $(GENSRCS) $(GENTCLS)

SCIDependTarget($(SRCS))
SCIObjLibraryTarget($(LIBNAME), $(OBJS),$(SO_LIBS),$(SO_LDFLAGS))
AllTarget($(GENTCLS))

MeshIterator.cc: Iterator.cc
	sed 's/TYPE/Mesh/g' < Iterator.cc > MeshIterator.cc
