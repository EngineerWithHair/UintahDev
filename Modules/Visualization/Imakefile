
#include <config/sci.cf>

#ifdef SCI_MESA
OPENGLINCS = -I$(TOP)/Mesa/include -I/usr/openwin/include
OPENGLLIBS = -L$(TOP)/Mesa/lib -lMesaGLU -lMesaGL -lXext -lX11
#else
OPENGLINCS =
OPENGLLIBS = -lGLU -lGL -lXext -lX11
#endif

#ifndef SCI_OPENGL
OPENGLOBJS =
OPENGLSRCS = 
#endif

OBJS = BitVisualize.o  BoxClipSField.o  CuttingPlane.o FastRender.o    \
	GenAxes.o GenColormap.o  GenFieldEdges.o  \
	Hedgehog.o  IsoMask.o  IsoSurface.o IsoSurfaceSP.o  LevoyVis.o  \
	OctIsoSurface.o     \
	RescaleColormap.o  Streamline.o  VectorSeg.o  VolVis.o   \
	WidgetTest.o
SRCS = BitVisualize.cc BoxClipSField.cc CuttingPlane.cc FastRender.cc    \
	GenAxes.cc GenColormap.cc GenFieldEdges.cc \
	Hedgehog.cc IsoMask.o  IsoSurface.cc IsoSurfaceSP.cc LevoyVis.cc \
	 OctIsoSurface.cc    \
	RescaleColormap.cc Streamline.cc VectorSeg.cc  VolVis.cc \
	WidgetTest.cc

LIBNAME = Visualization

LOCALINCLUDES = $(OPENGLINCS)

SO_LIBS =
SO_LDFLAGS = -L$(TOP)/lib -lWidgets -lDatatypes -lDataflow -lGeom -lGeometry \
	-lTCL -lscitk -ltk -lClasslib -lMultitask  $(OPENGLLIBS) \
	-lMalloc -lm -lC -lc

SCIDependTarget($(SRCS))
SCIObjLibraryTarget($(LIBNAME),$(OBJS),$(SO_LIBS),$(SO_LDFLAGS))
