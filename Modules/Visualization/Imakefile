
#include <config/sci.cf>

#ifdef SCI_MESA
OPENGLINCS = -I$(TOP)/Mesa/include 
OPENGLLIBS = -L$(TOP)/Mesa/lib -lMesaGLU -lMesaGL -lXext -lX11
#else
OPENGLINCS = 
OPENGLLIBS = -lGLU -lGL -lXext -lX11
#endif

#ifndef SCI_OPENGL
OPENGLOBJS =
OPENGLSRCS = 
#endif

OBJS = AddWells2.o  BB.o  BitVisualize.o  BoxClipSField.o  BoundGrid.o  \
	ColorMapKey.o  CuttingPlane.o  CuttingPlaneTex.o  \
	FastRender.o  FieldCage.o  \
	GenAxes.o GenColorMap.o  GenFieldEdges.o GenTransferFunc.o  \
	GenStandardColorMaps.o  Hedgehog.o  HedgehogLitLines.o  \
	ImageViewer.o  IsoMask.o  IsoSurface.o  \
	IsoSurfaceDW.o  IsoSurfaceMRSG.o  IsoSurfaceSP.o  \
	OctIsoSurface.o  RenderRG.o  RescaleColorMap.o  \
	SimpVolVis.o  Streamline.o  Ted.o  \
	VectorSeg.o  VolVis.o  VolRendTexSlices.o  WidgetTest.o

SRCS = AddWells2.cc BB.cc BitVisualize.cc BoxClipSField.cc BoundGrid.cc \
	ColorMapKey.cc CuttingPlane.cc CuttingPlaneTex.cc \
	FastRender.c  FieldCage.cc \
	GenAxes.cc GenColorMap.cc GenFieldEdges.cc GenTransferFunc.cc \
	GenStandardColorMaps.cc Hedgehog.cc HedgehogLitLines.cc \
	ImageViewer.cc IsoMask.cc IsoSurface.cc \
	IsoSurfaceDW.cc IsoSurfaceMRSG.cc IsoSurfaceSP.cc \
	OctIsoSurface.cc RenderRG.cc RescaleColorMap.cc \
	SimpVolVis.cc Streamline.cc Ted.cc \
	VectorSeg.cc VolVis.cc VolRendTexSlices.cc WidgetTest.cc

LIBNAME = Visualization

LOCALINCLUDES = $(OPENGLINCS)

SO_LIBS =
SO_LDFLAGS = -L$(TOP)/lib -lWidgets -lDatatypes -lDataflow -lGeom -lGeometry \
	-lTCL -lscitk TK_LIB TCL_LIB -lClasslib -lMultitask  $(OPENGLLIBS) \
	-lMalloc -lm -lC -lc

SCIDependTarget($(SRCS))
SCIObjLibraryTarget($(LIBNAME),$(OBJS),$(SO_LIBS),$(SO_LDFLAGS))

#ifdef SCI_MACHINE_SGI
#ifdef SCI_IRIX_BIN_o32
OPTLEVEL = -O2
#else
OPTLEVEL = -O3 -OPT:roundoff=3:div_split=ON:alias=typed:fast_exp=ON
#endif
OPTFLAGS = SCI_BinFlags -I$(TOP) $(OPTLEVEL)  -fullwarn
#else
OPTFLAGS = $(CFLAGS)
#endif

SUPEROPTFLAGS = 
FastRender.o: FastRender.c
	$(CC) $(OPTFLAGS) -c FastRender.c

