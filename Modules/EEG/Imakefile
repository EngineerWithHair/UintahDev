#else
OPENGLINCS =
OPENGLLIBS = -lGLU -lGL -lXext -lX11
#endif
#else
OPENGLOBJS =
OPENGLSRCS = 
#endif

OBJS = BldEEGMesh.o  Coregister.o  SegFldOps.o  SegFldToSurfTree.o  \
	Taubin.o  $(OPENGLOBJS)
SRCS = BldEEGMesh.cc Coregister.cc SegFldOps.cc SegFldToSurfTree.cc \
	Taubin.cc $(OPENGLSRCS)

LIBNAME = EEG

LOCALINCLUDES = $(OPENGLINCS)
SO_LIBS = 
SO_LDFLAGS = -L$(TOP)/lib -lDatatypes -lGeom -lDataflow \
	-lGeometry -lMath -lTCL -lClasslib -lMultitask $(OPENGLLIBS) \
	-lMalloc -lWidgets -lm

SCIDependTarget($(SRCS))
SCIObjLibraryTarget($(LIBNAME),$(OBJS),$(SO_LIBS),$(SO_LDFLAGS))
