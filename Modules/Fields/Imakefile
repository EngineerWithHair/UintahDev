
#include <config/sci.cf>

#ifdef SCI_OPENGL
OPENGLOBJS = OpenGL_Ex.o  TrainSegment.o
OPENGLSRCS = OpenGL_Ex.cc TrainSegment.cc

#ifdef SCI_MESA
OPENGLINCS = -I$(TOP)/Mesa/include -I/usr/openwin/include
OPENGLLIBS = -L$(TOP)/Mesa/lib -lMesaGLU -lMesaGL -lXext -lX11
#else
OPENGLINCS = -I/usr/openwin/include
OPENGLLIBS = -lGLU -lGL -lXext -lX11
#endif
#else
OPENGLOBJS =
OPENGLSRCS = 
#endif

OBJS = ClipField.o  ExtractSurfs.o  FieldFilter.o  FieldSeed.o \
	GenSigmaSet.o  Gradient.o  GradientMagnitude.o  MMeshToSFUG.o  \
	MergeTensor.o  TransformField.o  $(OPENGLOBJS)
SRCS = ClipField.cc ExtractSurfs.cc FieldFilter.cc FieldSeed.cc \
	GenSigmaSet.cc Gradient.cc GradientMagnitude.cc MMeshToSFUG.cc \
	MergeTensor.cc TransformField.cc $(OPENGLSRCS)

LIBNAME = Fields

LOCALINCLUDES = $(OPENGLINCS)
SO_LIBS =

SO_LDFLAGS = -L$(TOP)/lib -L/usr/openwin/lib -lDatatypes -lDataflow \
	-lGeom -lTCL -lClasslib -lMultitask $(OPENGLLIBS) \
	-lscitk -ltk -lMalloc -lWidgets -lGeometry \
	-lm -lC -lc

SCIDependTarget($(SRCS))
SCIObjLibraryTarget($(LIBNAME),$(OBJS),$(SO_LIBS),$(SO_LDFLAGS))

