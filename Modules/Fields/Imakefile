
#include <config/sci.cf>

#ifdef SCI_OPENGL
OPENGLOBJS = TrainSegment.o
OPENGLSRCS = TrainSegment.cc

#ifdef SCI_MESA
OPENGLINCS = -I$(TOP)/Mesa/include
OPENGLLIBS = -L$(TOP)/Mesa/lib -lMesaGLU -lMesaGL -lXext -lX11
#else
OPENGLINCS =
OPENGLLIBS = -lGLU -lGL -lXext -lX11
#endif
#else
OPENGLOBJS =
OPENGLSRCS = 
#endif

OBJS = ClipField.o  Downsample.o  FieldFilter.o  GenSigmaSet.o  Gradient.o  Magnitude.o \
	MMeshToSFUG.o  TransformField.o  $(OPENGLOBJS)
SRCS = ClipField.cc Downsample.cc FieldFilter.cc GenSigmaSet.cc Gradient.cc Magnitude.cc \
	MMeshToSFUG.cc TransformField.cc $(OPENGLSRCS)

LIBNAME = Fields

LOCALINCLUDES = $(OPENGLINCS)
SO_LIBS =

SO_LDFLAGS = -L$(TOP)/lib -lDatatypes -lDataflow -lGeom -lTCL -lClasslib \
	-lMultitask $(OPENGLLIBS) -ltk -lMalloc -lWidgets -lGeometry -lm

SCIDependTarget($(SRCS))
SCIObjLibraryTarget($(LIBNAME),$(OBJS),$(SO_LIBS),$(SO_LDFLAGS))
